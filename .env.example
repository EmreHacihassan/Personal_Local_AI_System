# Enterprise AI Assistant - Environment Configuration
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# ============ OLLAMA ============
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PRIMARY_MODEL=qwen2.5:7b
OLLAMA_BACKUP_MODEL=qwen2.5:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ============ API ============
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ============ FRONTEND ============
STREAMLIT_PORT=8501

# ============ DATABASE ============
CHROMA_PERSIST_DIR=./data/chroma_db
SQLITE_DB_PATH=./data/enterprise.db

# ============ RAG SETTINGS ============
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# ============ SECURITY ============
API_KEY=your-secret-api-key-here
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# ============ LOGGING ============
LOG_LEVEL=INFO
LOG_DIR=./logs
